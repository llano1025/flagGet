{
  "manifest_version": 3,
  "name": "Radio Button Profile Saver",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs", 
    "storage",
    "scripting",
    "runtime"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*"

  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}